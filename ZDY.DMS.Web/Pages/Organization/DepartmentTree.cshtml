@page
@model ZDY.DMS.Web.Pages.Organization.DepartmentTreeModel
@{ Layout = null;}

@if (Model.Departments.Count() > 0)
{

    <tree-table fields="@Model.Fields" dataset="@Model.Departments">
        <tree-table-template-column display-name="排序" field-name="Order" is-centered="true">
            <badge state="Warning" text="{0}" />
        </tree-table-template-column>
        <tree-table-template-column display-name="编辑" width="1">
            <button size="Sm" is-outline="true"  state="Info" is-only-icon="true" icon="Pencil" class-names="department-edit" />
        </tree-table-template-column>
    </tree-table>

}
else
{

    <h3 class="text-center mt-5">暂无部门数据！</h3>

}



