@page
@model MailModel
@{
    ViewData["Title"] = "Contact";
}
@await Html.PartialAsync("_Breadcrumbs", "联系我们")
<div class="mail animated wow zoomIn" data-wow-delay=".5s">
    <div class="container">
        <h3>联系我们</h3>
        <p class="est">
            甄选服装行业知名品牌，专业从事都市高品味休闲服装的经营和设计，以都市街头假日休闲和都市商旅为主的风格深受时尚男士喜爱
        </p>
        <div class="mail-grids">
            <div class="col-md-8 mail-grid-left animated wow slideInLeft" data-wow-delay=".5s">
                <form>
                    <input type="text" value="姓名" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '姓名';}" required="">
                    <input type="email" value="邮箱" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '邮箱';}" required="">
                    <input type="text" value="标题" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '标题';}" required="">
                    <textarea type="text" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '内容...';}" required="">内容...</textarea>
                    <input type="submit" value="现在就发送">
                </form>
            </div>
            <div class="col-md-4 mail-grid-right animated wow slideInRight" data-wow-delay=".5s">
                <div class="mail-grid-right1">
                    <img src="images/3.png" alt=" " class="img-responsive" />
                    <h4>
                        丽塔
                        <span>客户经理</span>
                    </h4>
                    <ul class="phone-mail">
                        <li><i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>电话: +1234 567 893</li>
                        <li><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>邮箱: <a href="mailto:zdyla@126.com">zdyla@126.com</a></li>
                    </ul>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>